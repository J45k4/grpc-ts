{
	"name": "grpc-ts",
	"version": "0.0.37",
	"description": "",
	"main": "app.js",
	"bin": {
		"grpc-ts": "./dist/app.js"
	},
	"scripts": {
		"test": "npm run lint && jest",
		"build": "tsc -p tsconfig.json",
		"lint": "tslint -p tslint.json",
		"lint-fix": "tslint -p tslint.json --fix",
		"watch": "tsc -w -p tsconfig.json",
		"prepublish": "npm run build && npm run bump-patch",
		"bump-patch": "npm version --no-git-tag-version patch",
		"bump-minor": "npm version --no-git-tag-version minor",
		"bump-major": "npm version --no-git-tag-version major"
	},
	"dependencies": {
		"protobufjs": "^6.8.6",
		"ts-node": "^5.0.1",
		"prettier": "^1.11.1"
	},
	"devDependencies": {
		"@types/jest": "^22.2.2",
		"@types/prettier": "^1.10.0",
		"@types/protobufjs": "^6.0.0",
		"ts-jest": "^22.4.6",
		"tslint": "^5.10.0",
		"typescript": "^2.8.1"
	},
	"files": [
		"dist"
	],
	"author": "",
	"license": "MIT",
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
